.modal.fade{:role => "dialog", :style => "display: none;", :id => "myMod#{agenda.id}"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} &#xD7;
      .modal-body
        %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
          %tbody
            %tr
              %td{:style => "text-align:left", :valign => "top"}
                %p
                  %h3{:style => "font-weight:bold;"} #{agenda.title}
                  %br
                    %h6 #{formatted_time(agenda.start_agenda_time, "%I:%M %p")} - #{agenda.end_agenda_time.present? ? formatted_time(agenda.end_agenda_time, "%I:%M %p") : 'Onwards'}
                  .clear
                  %p{:style => "white-space:pre-line;"} #{agenda.discription}
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
